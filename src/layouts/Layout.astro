---
import {LanguageSwitcher} from '~components/Modal/LanguageSwitcher'
import Navigation from '~components/Navigation.astro'
import {IS_PROD} from '~constants/env'
import Head from './Head.astro'

import {mainLinks, type Link} from '~constants/navigation'
import '~styles/base.css'

export interface Props {
  class?: string
  title?: string
  description?: string
  lang?: string
  showLangModal?: boolean
  newBg?: boolean
  links?: Link[]
}

const {
  class: mainClasses,
  title,
  description,
  lang = 'en',
  showLangModal = false,
  newBg = false,
  links = mainLinks,
} = Astro.props
---

<!doctype html>
<html lang={lang} class='scroll-smooth bg-darkest'>
  <head>
    <Head title={title} description={description} />
    {IS_PROD && <script defer='defer' data-domain='whocards.cc' src='/js/script.js' />}
  </head>
  <body
    class='m-0 flex min-h-screen flex-col font-sans text-white'
    class:list={[newBg ? '' : 'bg-hero bg-fixed bg-center bg-no-repeat bg-cover']}
  >
    <Navigation links={links}>
      <main
        class:list={['flex min-h-screen w-full flex-col items-center justify-center', mainClasses]}
      >
        <slot />
      </main>
    </Navigation>
    {showLangModal && <LanguageSwitcher client:only />}
    <style is:global></style>
  </body>
</html>
