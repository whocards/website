import LanguageSwitcher from '~components/Modal/LanguageSwitcher.astro'
import Head from './Head.astro'

import '@fontsource/nunito'
import '@fontsource/dm-sans'
import '~styles/base.css'
---

<!DOCTYPE html>
<html lang='en' class='h-full bg-dark'>
  <head>
    <Head />
  </head>
  <body class='flex h-full justify-center bg-hero bg-fixed bg-center bg-no-repeat text-white'>
    <Navbar />
    <main class='md:p-18 flex w-full items-center justify-center overflow-y-auto py-8'>
      <slot />
    </main>
    <LanguageSwitcher />
    <style is:global></style>
  </body>
</html>
