    <Icon name='akar-icons:arrow-up' class='h-6 w-6' />
  </div>
</Layout>

<script>
  const scrollButton = document.getElementById('btn-back-to-top')!
  const container = document.getElementById('main')!
  const TOP = 100
  let visible = false

  const scrollEvent = () => {
    if (container.scrollTop > TOP !== visible) {
      visible = container.scrollTop > TOP
      scrollButton.classList.toggle('-bottom-14')
      scrollButton.classList.toggle('bottom-4')
    }
  }

  container.addEventListener('scroll', scrollEvent)

  scrollButton.onclick = () => {
    container.scrollTo({top: 0})
  }
</script>
