---
export interface Props {
  name: string
  contents: Array<{
    title: string
    content: string
  }>
}

const {name, contents} = Astro.props
---

<div class='flex flex-col gap-3'>
  {
    contents?.map(({title, content}) => (
      <div class='collapse collapse-arrow border border-gray-dark'>
        <input type='radio' name={name} class='peer' />
        <div class='collapse-title font-medium leading-relaxed p-4 peer-checked:border-gray-dark peer-checked:border-b'>
          {title}
        </div>
        <div class='collapse-content text-sm leading-snug text-gray-dark peer-checked:pt-4'>
          <p>{content}</p>
        </div>
      </div>
    ))
  }
</div>
