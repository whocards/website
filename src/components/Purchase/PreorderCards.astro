---
import {Icon} from 'astro-icon/components'
import type {Icon as IconName} from 'virtual:astro-icon'
import Button from '~components/ui/Button.astro'
import {products} from '~constants/products'
---

<div
  class='grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 justify-center lg:justify-between gap-4 lg:gap-6'
>
  {
    products.map((product) => (
      <form
        method='POST'
        class='bg-zinc-800 w-full p-5 lg:p-8 rounded-3xl flex flex-col gap-2.5 lg:gap-5 lg:text-lg'
      >
        <div class='flex items-center justify-center w-10 h-10 lg:w-16 lg:h-16 bg-gradient-primary rounded-full'>
          <Icon name={product.icon as IconName} class='w-6 h-6 lg:w-10 lg:h-10 text-white' />
        </div>
        <div class='text-lg lg:text-2xl font-semibold leading-7 pt-2.5'>{product.title}</div>
        <div class='font-medium leading-[60px] text-[40px] lg:text-[54px]'>â‚¬{product.price}</div>
        <p class='pb-1.5 lg:pb-2 text-gray-dark'>{product.description}</p>
        <div class='flex gap-3 items-center mt-auto'>
          <Icon name='check' class='w-6 h-6 lg:w-7 lg:h-7 min-w-[1.5rem] lg:min-w-[1.75rem]' />
          <div class='font-medium leading-relaxed'>
            {product.quantity === 1
              ? '1 deck delivered to you or someone else'
              : `${product.quantity} decks delivered to you`}
          </div>
        </div>
        <div class='flex gap-3 pb-3.5'>
          <Icon name='check' class='w-6 h-6 lg:w-7 lg:h-7 min-w-[1.5rem] lg:min-w-[1.75rem]' />
          <div class='font-medium leading-relaxed'>Shipping included</div>
        </div>
        <input type='hidden' name='count' value={product.quantity} />
        <input type='hidden' name='priceId' value={product.priceId} />
        <input type='hidden' name='shippingId' value={product.shippingId} />
        <Button type='submit' role='link' full>
          Order
        </Button>
      </form>
    ))
  }
</div>
