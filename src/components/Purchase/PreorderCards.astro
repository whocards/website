---
import Icon from 'astro-icon'
import Button from '~components/ui/Button.astro'
import {openCollectiveProducts} from '~constants/products'
---

<div class='flex flex-col w-full justify-center gap-4'>
  {
    openCollectiveProducts.map((product) => (
      <div class='bg-zinc-800 w-full p-5 rounded-3xl flex flex-col gap-2.5'>
        <div class='flex items-center justify-center w-10 h-10 bg-gradient-primary rounded-full'>
          <Icon name={product.icon} class='w-6 h-6 text-white' />
        </div>
        <div class='text-lg font-semibold leading-7 pt-2.5'>{product.title}</div>
        <div class='font-medium leading-[60px] text-[40px]'>â‚¬{product.price}</div>
        <p class='mb-1.5 text-gray-dark'>{product.description}</p>
        <div class='flex gap-3 items-center'>
          <Icon name='check' class='w-6 h-6' />
          <div class='font-medium leading-relaxed'>1 pack for you</div>
        </div>
        <div class='flex gap-3 pb-3.5'>
          <Icon name='check' class='w-6 h-6' />
          <div class='font-medium leading-relaxed'>
            {product.quantity - 1} pack{product.quantity === 2 ? '' : 's'} for gifting
          </div>
        </div>
        <Button href={product.url} tag='a' target='_blank' class='w-full'>
          Order
        </Button>
      </div>
    ))
  }
</div>
