---
import Layout from '~layouts/Layout.astro'
---

<Layout>
  <section class='m-4 flex flex-col justify-center gap-8 text-center font-aptly lg:mt-20 lg:gap-12'>
    <h1
      class='max-w-xs text-5xl font-extrabold leading-none tracking-tight text-white xl:max-w-none xl:text-9xl'
    >
      Dare to <span class='text-primary-light'>Open</span>
      <span class='text-primary-dark'>Up</span>?
    </h1>
    <p class='text-left text-xl font-light text-white lg:max-w-3xl lg:text-4xl'>
      From our hearts to yours<br />we hope the WhoCards<br />bring more connection<br />into your
      life üôè
    </p>
    <div class='flex w-full flex-col items-center gap-8 md:flex-row phone-landscape:flex-row'>
      <a id='play' class='btn-primary btn'>Play</a>
      <button class='who-modal btn-secondary btn'> Choose Language</button>
    </div>
  </section>
</Layout>

<script>
  import {initGame, idsStore} from '~stores/Game.store'
  import {getFirstQuestionUrl} from '~utils'

  initGame()

  document.getElementById('play')?.setAttribute('href', getFirstQuestionUrl(idsStore.get().next))
</script>
