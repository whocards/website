---
import {Icon} from 'astro-icon'
import Button from '~components/ui/Button.astro'

export interface Props {
  href: string
}

const {href} = Astro.props
---

<div
  class='flex flex-col justify-center text-center items-center rounded-2xl border border-dark w-full md:max-w-lg gap-4 py-[25%] md:py-0 px-4 max-h-[80vh]'
>
  <Icon name='check-round' class='w-16 h-16 lg:w-20 lg:h-20 min-h-16 min-w-[4rem]' />
  <h1 class='text-3xl font-title font-bold pt-2'>
    Your shipping information has been submitted successfully
  </h1>
  <p class='text-base text-gray-dark'>
    You may update your shipping information<br />later if necessary.
  </p>
  <Button
    variant='secondary'
    hideIcon
    class='text-white border-dark'
    tag='a'
    href={href}
    full={false}
  >
    Update Address
  </Button>
</div>
