---
import Icon from 'astro-icon'

interface Props {
  title: string
}
const {title} = Astro.props
---
<input type="checkbox" id="who-modal" class="modal-toggle" />
<div class="modal">
  <div class="bg-white w-full h-full">
    <div class="pl-4 pr-3 h-16 flex items-center justify-between">
      <h3 class="font-bold text-2xl">{title}</h3>
      <label for="who-modal" class="btn btn-ghost btn-circle">
        <Icon name="ic:round-close" class="h-8 w-8 cursor-pointer" />
      </label>
    </div>
    <slot />
  </div>
</div>

<script>
  const buttons = document.querySelectorAll('.close-modal')
  const target = document.querySelector('#who-modal') as HTMLInputElement

  buttons.forEach(button => {
    button.addEventListener('click', () => {
      setTimeout(() => {
        target.checked = false
      }, 400)
    })
  })
</script>
